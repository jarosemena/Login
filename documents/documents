        +iniciarSesion() 
        +recuperarContraseña() 
    } 
 
    class AuthToken { 
        +int id 
        +String token 
        +Date fecha_creacion 
        +Date fecha_expiracion 
        +generarToken() 
    } 
 
    class PasswordResetCode { 
        +int id 
        +String codigo 
        +Date fecha_creacion 
        +validarCodigo() 
    } 
 
    class AuthService { 
        +int id 
        +String nombre 
        +autenticar() 
    } 
 
    class ActivityLog { 
